<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KevinHomeWork20250325" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 主色 -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- 輔助色 -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/accent_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- 背景和文字色，根據模式動態切換 -->
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:textColor">@color/text_color</item>
        <!-- 狀態欄和導航欄 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- 高亮效果 -->
        <item name="colorControlHighlight">@color/highlight_color</item>
    </style>
</resources>